<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>

    <bean id="clientProperties" class="org.objectrepository.util.PropertyPlaceHolder"/>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="clientProperties"/>
    </bean>

    <bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass"
                  value="org.springframework.util.Log4jConfigurer"/>
        <property name="targetMethod" value="initLogging"/>
        <property name="arguments">
            <list>
                <value>#{clientProperties['log4j.xml']}</value>
            </list>
        </property>
    </bean>

    <bean id="datasourcemongo" class="org.objectrepository.dao.MongoDBSingleton">
        <constructor-arg name="hosts" value="#{clientProperties['mongo.hosts']}"/>
        <constructor-arg name="connectionsPerHost" value="#{clientProperties['mongo.connectionsPerHost']}"/>
        <constructor-arg name="writeConcern" value="#{clientProperties['mongo.writeConcern']}"/>
    </bean>
    <bean id="mongo" class="com.mongodb.Mongo" factory-bean="datasourcemongo" factory-method="getInstance"/>
    <bean id="mongoTemplateSa" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg name="mongo" ref="mongo"/>
        <constructor-arg name="databaseName" value="#{clientProperties['mongo.database.sa']}"/>
    </bean>

</beans>